{
    "exclude": [
        "./build",
        "jest.config.ts",
        "./test"
    ],
    "include": [
        "./src"
    ],
    "ts-node": {
        "files": true
    },
    "compilerOptions": {
        "target": "ESNext",
        "lib": [
            "es6"
        ],
        "resolveJsonModule": true,
        "allowJs": true,
        "noImplicitAny": true,
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "esModuleInterop": true,
        "strict": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "outDir": "./dist",
        "rootDir": "./src",
        "baseUrl": "./",
        "types": [
            "node"
        ],
        "typeRoots": [
            "node_modules/@types"
        ]
    }
}